<mah:MetroWindow x:Class="recTivo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:recTivo"
        xmlns:mat="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
        mc:Ignorable="d"
        WindowStyle="None"
        Title="rectivo" 
        Height="450" Width="800">
    <Grid  Background="#2D2D30">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Button x:Name="Articulos"
                Click="Articulos_Click"
                Content="Artículos" 
                FontSize="40"
                Margin="10,0"
                Width="300"
                Height="150"/>
        <Button Grid.Column="1"
                x:Name="ordenes"
                Click="Ordenes_Click"
                Content="Órdenes" 
                FontSize="40"
                Margin="10,0"
                Width="300"
                Height="150"/>
        <Button Grid.Row="1"
                x:Name="Almacen"
                Click="Almacen_Click"
                Content="Almacén" 
                FontSize="40"
                Margin="10,0"
                Width="300"
                Height="150"/>
        <Button Grid.Column="1"
                Grid.Row="1"
                x:Name="Clientes"
                Click="Clientes_Click"
                Content="Clientes" 
                FontSize="40"
                Margin="10,0"
                Width="300"
                Height="150"/>


        <!--<DockPanel>
            --><!-- Barra superior --><!--
            <StackPanel Orientation="Horizontal" Height="40" DockPanel.Dock="Top" HorizontalAlignment="Center">
               
                <Button Content="Artículos" Margin="10,0"/>
                <Button Content="Órdenes" Margin="10,0"/>
                <Button Content="Almacén" Margin="10,0"/>
                <Button Content="Clientes" Margin="10,0"/>
            </StackPanel>

            --><!-- Contenido principal --><!--
            <ContentControl x:Name="MainContent"/>
        </DockPanel>-->
    </Grid>
</mah:MetroWindow>
