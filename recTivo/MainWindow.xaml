<mah:MetroWindow x:Class="recTivo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:recTivo"
        xmlns:mat="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
        mc:Ignorable="d"
        Title="rectivo" 
        Icon="/Recursos/Iconos/rectivo_icon.png"
        Height="450" Width="800">
    <Grid>
        <DockPanel>
            <!-- Barra superior -->
            <StackPanel Orientation="Horizontal" Background="#2D2D30" Height="40" DockPanel.Dock="Top">
                <TextBlock Text="RecTivo" Foreground="White" FontSize="16" Margin="10,0"/>
                <Button Content="Artículos" Margin="10,0"/>
                <Button Content="Órdenes" Margin="10,0"/>
                <Button Content="Almacén" Margin="10,0"/>
                <Button Content="Clientes" Margin="10,0"/>
            </StackPanel>

            <!-- Contenido principal -->
            <ContentControl x:Name="MainContent"/>
        </DockPanel>
    </Grid>
</mah:MetroWindow>
