<Window x:Class="recTivo.Frontend.Dialogos.DialogoSalidaAlmacen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:recTivo.Frontend.Dialogos"
        mc:Ignorable="d"
        Title="Pulsa ESC para volver atrás" 
        Height="500" Width="600"
        ResizeMode="NoResize"
        x:Name="DialSalidaAlmacen"
        Loaded="DialSalidaAlmacen_Loaded"
        WindowStartupLocation="CenterScreen"
        Background="#2D2D30">
    <Window.Resources>

        <Style TargetType="TextBox">
            <Setter Property="Background" Value="#E0E0E0"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Padding" Value="5"/>
        </Style>


        <Style TargetType="ComboBox">
            <Setter Property="Background" Value="#E0E0E0"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Padding" Value="5"/>
        </Style>
    </Window.Resources>

    <Grid Margin="30">
        <StackPanel>
            <TextBlock Text="Código del artículo:" Foreground="#FF9800"/>
            <ComboBox x:Name="cmbCodigo" 
                      Height="30" 
                      Margin="0,5"
                      DisplayMemberPath="Codigo"
                      SelectionChanged="cmbCodigo_SelectionChanged"/>

            <TextBlock Text="Descripción 1:" Foreground="#FF9800"/>
            <ComboBox x:Name="cmbDescrip1" 
                      Height="30" 
                      Margin="0,5"
                      SelectionChanged="cmbDescrip1_SelectionChanged"/>

            <TextBlock Text="Descripción 2:" Foreground="#FF9800"/>
            <ComboBox x:Name="cmbDescrip2" 
                      Height="30" 
                      Margin="0,5"
                      SelectionChanged="cmbDescrip2_SelectionChanged" Cursor=""/>

            <TextBlock Text="Cantidad:" Foreground="#FF9800"/>
            <TextBox x:Name="txtCantidad" 
                     Height="30" 
                     Margin="0,5" 
                     Width="150"
                     HorizontalAlignment="Left"/>

            <TextBlock Text="Letra pasillo:" Foreground="#FF9800"/>
            <TextBox x:Name="txtPasillo" 
                     Height="30" 
                     Margin="0,5"
                     Width="150"
                     HorizontalAlignment="Left"/>

            <TextBlock Text="Número estantería:" Foreground="#FF9800"/>
            <TextBox x:Name="txtEstanteria" 
                     Height="30" 
                     Margin="0,5"
                     Width="150"
                     HorizontalAlignment="Left"/>

            <TextBlock Text="Hueco:" Foreground="#FF9800"/>
            <TextBox x:Name="txtHueco" 
                     Height="30" 
                     Margin="0,5"
                     Width="150"
                     HorizontalAlignment="Left"/>
        </StackPanel>
        <Button Content="Restar al almacén"
                x:Name="btnRestarAlmacen"
                Click="btnRestarAlmacen_Click"
                Grid.Row="7" Grid.ColumnSpan="2"
                Height="40" Width="200"
                HorizontalAlignment="Center"
                Margin="0,20,0,0"
                Background="#E0E0E0"
                Foreground="#ff9800"
                FontWeight="Bold"/>

    </Grid>

</Window>
