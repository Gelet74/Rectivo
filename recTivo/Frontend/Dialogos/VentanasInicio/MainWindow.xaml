<mah:MetroWindow x:Class="recTivo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:recTivo"
        xmlns:mat="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
        mc:Ignorable="d"
        WindowStyle="None"
        Title="rectivo" 
        Height="450" Width="950">
    <Grid Background="#2D2D30">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="80"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Column="0" 
                        HorizontalAlignment="Left" 
                        VerticalAlignment="Top" 
                        Margin="0,10,0,0">
                <Image Source="/Recursos/Iconos/rectivo_logo_sintexto.png" 
                       Width="40" 
                       Height="40"
                       Margin="10"/>
                <TextBlock Text="recTivo" 
                           FontSize="20" 
                           FontWeight="Bold" 
                           Foreground="#ff9800" 
                           Margin="8,0,0,0"
                           VerticalAlignment="Center"/>
                <Button 
                    x:Name="articulos"
                    Click="Articulos_Click"
                    
                    FontSize="40"
                    Background="#ff9800"
                    BorderBrush="Transparent"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                    HorizontalContentAlignment="Center"
                    VerticalContentAlignment="Bottom"
                    Cursor="Hand" Margin="0,0,20,10">
                    <Image Source="/Recursos/Iconos/Almacen.png" />

                </Button>

                <Button Grid.Column="2"
                    x:Name="ordenes"
                    Click="Ordenes_Click"
                    Content="Órdenes"
                    FontSize="40"
                    Width="300"
                    Height="150"
                    Background="#ff9800"
                    BorderBrush="Transparent"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Bottom"
                    HorizontalContentAlignment="Center"
                    VerticalContentAlignment="Center"
                    Cursor="Hand" Margin="20,0,0,10">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}"
                                CornerRadius="20"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                                <ContentPresenter HorizontalAlignment="Center"
                      VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

                <Button Grid.Row="1" Grid.Column="0" 
                    x:Name="almacen"
                    Click="Almacen_Click"
                    Content="Almacén"
                    FontSize="40"
                    Width="300"
                    Height="150"
                    Background="#ff9800"
                    BorderBrush="Transparent"
                    HorizontalAlignment="Right"
                    HorizontalContentAlignment="Center"
                    VerticalContentAlignment="Center"
                    Cursor="Hand" Margin="0,10,20,0">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}"
                    CornerRadius="20"
                    BorderBrush="{TemplateBinding BorderBrush}"
                    BorderThickness="{TemplateBinding BorderThickness}">
                                <ContentPresenter HorizontalAlignment="Center"
                      VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

                <Button Grid.Row="1" Grid.Column="2"
                    x:Name="clientes"
                    Click="Clientes_Click"
                    Content="Clientes"
                    FontSize="40"
                    Width="300"
                    Height="150"
                    Background="#ff9800"
                    BorderBrush="Transparent"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    HorizontalContentAlignment="Center"
                    VerticalContentAlignment="Center"
        Cursor="Hand" Margin="20,10,0,0">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}"
                    CornerRadius="20"
                    BorderBrush="{TemplateBinding BorderBrush}"
                    BorderThickness="{TemplateBinding BorderThickness}">
                                <ContentPresenter HorizontalAlignment="Center"
                      VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>


                <Button Grid.Column="1"
                    Grid.Row="0"
                    Content="Empleados"
                    x:Name="empleados"
                    Click="empleados_Click"
                    Width="300" Height="150"
                    FontSize="40"
                    Background="#ff9800"
                    BorderBrush="Transparent"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Bottom"
                    HorizontalContentAlignment="Center"
                    VerticalContentAlignment="Center"
                    Cursor="Hand" Margin="0,0,0,10">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}"
                                CornerRadius="20"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                                <ContentPresenter HorizontalAlignment="Center"
                                  VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

                <Button Grid.Column="1"
                    Grid.Row="1"
                    Content="Ventas"
                    x:Name="ventas"
                    Click="ventas_Click"
                    Width="300" Height="150"
                    FontSize="40"
                    Background="#ff9800"
                    BorderBrush="Transparent"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    HorizontalContentAlignment="Center"
                    VerticalContentAlignment="Center"
                    Cursor="Hand" Margin="0,10,0,0">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}"
                                CornerRadius="20"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                                <ContentPresenter HorizontalAlignment="Center"
                                  VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </StackPanel>

        </Grid>
    </Grid>
</mah:MetroWindow>
