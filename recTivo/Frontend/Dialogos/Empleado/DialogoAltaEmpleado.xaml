<Window x:Class="recTivo.Frontend.Dialogos.Empleado.DialogoAltaEmpleado"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Pulsa ESC para volver atrás"
        Height="500" Width="600"
        ResizeMode="NoResize"
        x:Name="DialAltaEmpleado"
        Loaded="DialAltaEmpleado_Loaded"
        Background="#2D2D30">

    <Window.Resources>
        <Style TargetType="TextBox">
            <Setter Property="Background" Value="#E0E0E0"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Padding" Value="5"/>
        </Style>

        <Style TargetType="ComboBox">
            <Setter Property="Background" Value="#E0E0E0"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Padding" Value="5"/>
        </Style>
    </Window.Resources>

    <Grid Margin="30">
        <StackPanel>
            <TextBlock Text="Apellidos:" 
                       Foreground="#FF9800"/>
            <TextBox x:Name="txtApellidos" 
                     Height="30" 
                     Margin="0,5" 
                     Width="300"
                     HorizontalAlignment="Left"/>

            <TextBlock Text="Nombre:" 
                       Foreground="#FF9800"/>
            <TextBox x:Name="txtNombre" 
                     Height="30" 
                     Margin="0,5" 
                     Width="300"
                     HorizontalAlignment="Left"/>

            <TextBlock Text="DNI:" 
                       Foreground="#FF9800"/>
            <TextBox x:Name="txtDni" 
                     Height="30" 
                     Margin="0,5" 
                     Width="150"
                     HorizontalAlignment="Left"/>

            <TextBlock Text="Usuario:" 
                       Foreground="#FF9800"/>
            <TextBox x:Name="txtUsername" 
                     Height="30" 
                     Margin="0,5" 
                     Width="200" 
                     HorizontalAlignment="Left"/>

            <TextBlock Text="Contraseña:" 
                       Foreground="#FF9800"/>
            <TextBox x:Name="txtPassword" 
                     Height="30"
                     Margin="0,5" 
                     Width="200"
                     HorizontalAlignment="Left"/>

            <TextBlock Text="Puesto:" Foreground="#FF9800"/>
            <ComboBox x:Name="cmbRol"
                      Height="30"
                      Margin="0,5"
                      DisplayMemberPath="Nombre"
                      SelectedValuePath="Id"
                      Width="200"
                      HorizontalAlignment="Left"/>
        </StackPanel>

        <Button Content="Dar de alta"
                x:Name="btnAltaEmpleado"
                Click="btnAltaEmpleado_Click"
                Grid.Row="7" Grid.ColumnSpan="2"
                Height="40" Width="200"
                HorizontalAlignment="Center"
                Margin="0,0,0,20"
                Background="#E0E0E0"
                Foreground="#ff9800"
                FontWeight="Bold"
                VerticalAlignment="Bottom"/>
    </Grid>
</Window>
